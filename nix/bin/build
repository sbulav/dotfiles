#!/bin/sh -e

VERSION=1.0
export args=$@

# Navigate to the directory of this script
cd $(dirname $(readlink -f $0))
cd ..

build() {
    if [ "$(uname)" == "Darwin" ]; then
       ./bin/darwin-build $args
    elif [ "$(uname)" == "Linux" ]; then
       ./bin/nixos-build $args
    else
       echo "Unknown platform"
    fi
}

build
