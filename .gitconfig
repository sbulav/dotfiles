
[user]
        email = bulavintsev.sergey@gmail.com
        name = Sergey Bulavintsev
[alias]
        st = status -sb
        lga = log --oneline --all --decorate --graph --color
[push]
        default = simple
[core]
	pager = bat
[merge]
	tool = nvimdiff
	conflictstyle = diff3
[diff]
	tool = nvimdiff
[difftool]
	prompt = false
[mergetool]
	prompt = false
[difftool "nvimdiff"]
	cmd = nvim -d $LOCAL $REMOTE
[mergetool "vimdiff"]
	cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[init]
	templatedir = ~/.git_template
