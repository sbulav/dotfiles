set previewer ~/.config/lf/lf_kitty_preview
set cleaner ~/.config/lf/lf_kitty_clean
set icons on
set drawbox

# Custom Functions
cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir -p $ans
}}

cmd mkfile ${{
  printf "File Name: "
  read ans
  $EDITOR $ans
}}

cmd open ${{
    case $(file --mime-type $f -b) in
        text/*) $EDITOR $fx;;
        *) for f in $fx; do open $f > /dev/null 2> /dev/null & done;;
    esac
}}

cmd edit_config :{{
  $$EDITOR ~/.config/lf/lfrc
  source ~/.config/lf/lfrc
}}

cmd trash ${{
    set -f
    if gio trash 2>/dev/null; then
        gio trash $fx
    else
        mkdir -p /tmp/trash
        mv -- $fx /tmp/trash
    fi
}}

map . set hidden!
map <enter> open
map mf mkfile
map md mkdir
map <tab> toggle
map DD trash
map R reload

# Movement
map c cd ~/
map gd cd ~/Documents
map gD cd ~/Downloads
map gp cd ~/Pictures
map gc cd ~/.config
map gp cd ~/git_pagaya/
map gt cd ~/git_pagaya/sb-tools/

# Tips

# notice:
# nerd-fonts must be installed for icons
# image preview does not work in tmux
# image preview require ImageMagick
# https://github.com/gokcehan/lf/wiki/Tips
